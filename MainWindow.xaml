<Window x:Class="Useful_Autoclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Useful autoclicker C#" Height="335" Width="400"
       
        Topmost="True"
        >
    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#EBEBEB"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12.5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Text" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20px"/>
        </Grid.ColumnDefinitions>


        <!--First section-->
        <Grid Grid.ColumnSpan="5" Grid.Column="0" Grid.Row="0" Background="#EBEBEB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Defaults" Grid.Column="0" BorderThickness="1"
                    BorderBrush="LightGray" Background="#EBEBEB"
                    Margin="10,3,0,3" Width="48" HorizontalAlignment="Left"/>

            <TextBlock Text="Click interval/Hold time"
                   Grid.Column="1" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Button Content="?" Grid.Column="3" BorderThickness="1"
                    BorderBrush="LightGray" Background="#EBEBEB"
                    Margin="0,3,10,3" Width="20" HorizontalAlignment="Right"/>

        </Grid>

        <Grid Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="2" Background="#EBEBEB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="17"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Click interval:" Margin="10,5,5,5" 
                       VerticalAlignment="Center" Grid.Column="0"/>

            <TextBox Grid.Column="1" Margin="5,5,4,5"/>
            <TextBlock Text="h"  Grid.Column="2" Margin="0,0,7,0"
                       VerticalAlignment="Center" />

            <TextBox Grid.Column="3" Margin="5,5,4,5"/>
            <TextBlock Text="m"  Grid.Column="4" Margin="0,0,7,0"
                       VerticalAlignment="Center" />



            <TextBox Grid.Column="5" Margin="5,5,4,5"/>
            <TextBlock Text="s"  Grid.Column="6" Margin="0,0,7,0"
                       VerticalAlignment="Center" />


            <TextBox Grid.Column="7" Margin="5,5,4,5"/>
            <TextBlock Text="ms" Grid.Column="8" Margin="0,0,7,0"
                       VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="4" Background="#EBEBEB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="17"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Hold time:" Margin="10,5,5,5" 
                       VerticalAlignment="Center" Grid.Column="0"/>

            <TextBox Grid.Column="1" Margin="5,5,4,5"/>
            <TextBlock Text="h"  Grid.Column="2" Margin="0,0,7,0"
                       VerticalAlignment="Center" />

            <TextBox Grid.Column="3" Margin="5,5,4,5"/>
            <TextBlock Text="m"  Grid.Column="4" Margin="0,0,7,0"
                       VerticalAlignment="Center" />



            <TextBox Grid.Column="5" Margin="5,5,4,5"/>
            <TextBlock Text="s"  Grid.Column="6" Margin="0,0,7,0"
                       VerticalAlignment="Center" />


            <TextBox Grid.Column="7" Margin="5,5,4,5"/>
            <TextBlock Text="ms" Grid.Column="8" Margin="0,0,14,0"
                       VerticalAlignment="Center" />
        </Grid>

        <!--Second Section-->
        <Rectangle Grid.ColumnSpan="5" Grid.Column="0" Grid.Row="6"/>
        <TextBlock Text="Randomize click interval" Grid.ColumnSpan="5"
                   Grid.Column="0" Grid.Row="6" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Grid Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="8" Background="#EBEBEB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="27"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Click inter:" Grid.Column="0" Margin="10,5,5,5"
                       VerticalAlignment="Center"/>

            <CheckBox Grid.Column="1" Margin="5,5,3,5" VerticalAlignment="Center"/>

            <TextBox Grid.Column="2" Margin="5,5,4,5"/>

            <TextBlock Text="ms" Grid.Column="3" Margin="0,0,11,0"
                       VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.ColumnSpan="1" Grid.Column="3" Grid.Row="8" Background="#EBEBEB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="27"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Hold time:" Grid.Column="0" Margin="10,5,5,5"
                       VerticalAlignment="Center"/>

            <CheckBox Grid.Column="1" Margin="5,5,3,5" VerticalAlignment="Center"/>

            <TextBox Grid.Column="2" Margin="5,5,4,5"/>

            <TextBlock Text="ms" Grid.Column="3" Margin="0,0,11,0"
                       VerticalAlignment="Center"/>
        </Grid>


        <!--Third section-->
        <Rectangle Grid.ColumnSpan="5" Grid.Column="0" Grid.Row="10" />
        <TextBlock Text="Clicks/Button/Hotkey" Grid.ColumnSpan="5"
                   Grid.Column="0" Grid.Row="10" HorizontalAlignment="Center"
                   VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" />


        <WrapPanel Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="12" Margin="-5">

            <Button Content="Select Hotkey (Back quote)" Width="160" Height="30" Margin="5" BorderThickness="0" Background="#EBEBEB"/>
            <Grid Width="160" Height="30" Margin="5" Background="#EBEBEB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="54"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Button:" Grid.Column="0" Margin="10,0,5,0"
                       VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" Margin="5,5,14,5" SelectedIndex="0">
                    <ComboBoxItem>Left</ComboBoxItem>
                    <ComboBoxItem>Middle</ComboBoxItem>
                    <ComboBoxItem>Right</ComboBoxItem>
                    <ComboBoxItem>Side front</ComboBoxItem>
                    <ComboBoxItem>Side back</ComboBoxItem>
                </ComboBox>
            </Grid>

            <Grid Width="100" Height="30" Margin="5" Background="#EBEBEB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Clicks:" Grid.Column="0" Margin="10,0,5,0"
                       VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Margin="5,5,10,5"/>
            </Grid>

            <Grid Width="186" Height="30" Margin="5" Background="#EBEBEB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="155"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Autoclick on button hold:" Grid.Column="0" Margin="10,0,5,0"
                       VerticalAlignment="Center"/>
                <CheckBox Grid.Column="1" Margin="5,5,10,5" VerticalAlignment="Center"/>
            </Grid>

        </WrapPanel>
    </Grid>
</Window>
